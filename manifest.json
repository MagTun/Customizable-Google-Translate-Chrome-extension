{
    "manifest_version": 2,
    "name": "Custom Google Translate extension",
    "description": "Use Google translate on the go",
    "version": "1.0",
    "default_locale": "en",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"


}