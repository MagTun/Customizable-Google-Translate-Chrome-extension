{
    "manifest_version": 2,
    "name": "Custom Google Translate extension",
    "description": "Use Google translate on the go",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "options_page": "options.html",
    "commands": {
        "copytoclipboard": {
            "suggested_key": {
                "default": "Alt+C"
            },
            "description": "Copy to clipboard"
        }
    }
}