{
    "manifest_version": 2,
    "name": "Custom Google Translate extension",
    "description": "Use Google translate on the go",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com https://translate.google.com; object-src 'self'",
    "permissions": [
        "*://translate.google.com/*",
        "tabs",
        "tts",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "options_page": "options.html"
}